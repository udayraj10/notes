{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // This is correct - setting the base URL to the root of the project
    "paths": {
      "@/*": ["*"] // This will map '@' to the root folder, allowing '@/path' to work
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
